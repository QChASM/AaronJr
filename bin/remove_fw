#! /usr/bin/env python3
from fireworks import (
    Firework,
    FWAction,
    FWorker,
    LaunchPad,
    ScriptTask,
    Workflow,
)

LAUNCHPAD = LaunchPad.auto_load()


def main(args):
    workflow = LAUNCHPAD.get_wf_by_fw_id(args.fw_id)
    to_check = set([args.fw_id])
    while len(to_check):
        fw_id = to_check.pop()
        try:
            for fw in workflow.links[fw_id]:
                to_check.add(fw)
        except KeyError:
            pass
        print(fw_id)
        workflow.remove_fws([fw_id])
    # have to archive and re-add to prevent database corruption
    LAUNCHPAD.archive_wf(args.fw_id)
    LAUNCHPAD.add_wf(workflow)


if __name__ == "__main__":
    import argparse

    parser = argparse.ArgumentParser()
    parser.add_argument("fw_id", type=int)
    args = parser.parse_args()
    main(args)
